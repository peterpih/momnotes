<p id="notice"><%= notice %></p>

<h1>Meal Types</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meal_types.each do |meal_type| %>
      <tr>
        <td><%= meal_type.name %></td>
        <td><%= link_to 'Show', meal_type, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_meal_type_path(meal_type), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', meal_type, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal Type', new_meal_type_path, class: 'btn btn-success btn-md' %>
