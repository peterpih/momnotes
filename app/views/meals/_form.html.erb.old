<%= form_for(meal) do |f| %>
  <% if meal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meal.errors.count, "error") %> prohibited this meal from being saved:</h2>

      <ul>
      <% meal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %>
    <%= f.datetime_select :date %>
  </div>
 <!--  <div class="field">
    <%= f.label :name %>
    <%= f.select :name, MealType.all.collect { |m| [m.name, m.name] } %>
  </div> -->
  <div class="field">
    <%= f.label :name %>
    <%= collection_select(:meal, :name, MealType.all, :name, :name, {}, {}) %>
  </div>
  <div class='checkbox-list' style="background-color: pink">
      <%= collection_check_boxes(:meal, :food_ids, @foods, :id, :name) do |b| %>
              <%= b.label(class: 'check_box') do %>
                    <%= b.check_box(class: 'check_box') %>
                  <%= b.label %>
              <% end %>
      <% end %>
  </div>
  <hr>
<p> second time</p>
<% Food.all.each do |food| %>
  <%= label_tag food.id, raw("#{check_box_tag(food.id)} #{food.name}") %>
<% end %>
<div style="background-color: yellow">
  <%= hidden_field_tag 'meal[food_ids][]', nil %>
  <% Food.all.each do |food| %>
    <%= check_box_tag 'meal[food_ids][]', food.id, @meal.food_ids.include?(food.id), id: dom_id(food)%>
    <%= food.name %><br>
  <% end %>
</div>
<hr>
<div style="background-color: orange">
  <div class='input-group checkbox'>
      <%= f.collection_check_boxes(:food_ids, Food.all, :id, :name) do |b| %>
              <% b.label(class: 'checkbox') do %>
              <%= b.check_box(class: "checkbox") + b.label%> 
              <% end %>     
      <% end %>
  </div>
</div>
<hr>
<hr>
<div style="background-color: green">
 <input type="hidden" name="meal[food_ids][]" id="meal_food_ids_" />
    <input type="checkbox" name="meal[food_ids][]" id="food_1" value="1" />
