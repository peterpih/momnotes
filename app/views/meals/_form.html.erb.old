    <label class="checkbox" for="food_4">Banana</label>
    <input type="checkbox" name="meal[food_ids][]" id="food_5" value="5" />
    <label class="checkbox" for="food_5">Pudding</label>
    <input type="checkbox" name="meal[food_ids][]" id="food_2" value="2" />
    <label class="checkbox" for="food_2">Buttered Toast #1</label>
    <div class="checkbox">
  </div>
    <hr>
      <label><input type="checkbox" value="">Option 1</label>
    </div>
    <div class="checkbox">
