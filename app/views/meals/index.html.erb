<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.date %></td>
        <td><%= meal.name %></td>
        <td><%= meal.note %></td>
        <td><%= link_to 'Show', meal, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path, class: 'btn btn-success btn-md' %>
