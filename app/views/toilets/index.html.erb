<p id="notice"><%= notice %></p>

<h1>Toilet Trips</h1>

<table>
  <thead>
    <tr>
      <th>In</th>
      <th>Out</th>
      <th>Duration</th>
      <th>Interval</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toilets.each do |toilet| %>
      <tr>
        <td><%= toilet.in %></td>
        <td><%= toilet.out %></td>
        <td style="text-align:right"><%= toilet.duration_mins %></td>
        <td style="text-align:right"><%= toilet.interval %></td>
        <td><%= link_to 'Show', toilet, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_toilet_path(toilet), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', toilet, method: :delete, data: { confirm: 'Are you sure?' }, class: ' btn btn-danger btn-xs', class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Toilet', new_toilet_path, class: 'btn btn-success btn-md' %>
